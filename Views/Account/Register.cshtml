@model CarLib.ViewModels.RegisterModel
@{ 
    ViewData["Title"] = "Регистрация";
}

<div class="container login-container">
    <div class="row justify-content-center">
        <div class="col-md-6 login-form-1">
            <h3>Регистрация</h3>

            <form asp-action="Register" asp-controller="Account" asp-antiforgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <div class="form-group">
                        <input type="text" asp-for="Email" class="form-control" placeholder="Введите вашу почту"/>
                        <span asp-validation-for="Email" />
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Введите ваш пароль" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="form-group">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Введите пароль повторно"/>
                        <span asp-validation-for="ConfirmPassword" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Регистрация" class="btnSubmit" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>